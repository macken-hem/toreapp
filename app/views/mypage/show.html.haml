.mypage_show
  .mypage_data
    .mypage_show_day
      #{@mypage.day}
    .mypage_weight
      体重#{@mypage.weight}kg
  .mypage_show_lists
    .mypage_show_list
      .nut_list
        朝食
        = pie_chart @morning ,height: '240px', width: '320px',class:'pie'
        %p
        P#{@mypage.morning_p}g  F#{@mypage.morning_f}g  C#{@mypage.morning_c}g  計#{@mypage.morning_cal}cal 
        %button#modal-open-btn 詳細
        #overlay
          #modalWindow
            .modal-message-box
              %div 朝食
              .menu_list= simple_format(@mypage.morning_menu)
            %button#modal-close-btn 戻る
      .nut_list
        間食（午前）
