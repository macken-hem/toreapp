.new_wrapper
  .new_header
    %h1
    You are what you eat!!
  .form
    = form_for(@mypage, url:'/mypage', metho: :create) do |f|
      .new_upper
        .new_mypage_day
          日付を入力
          = f.date_field :day,class:'day-by-day'
        .new_mypage_weight
          体重
          = f.number_field :weight, min: 0 , max:100, placeholder: 0 ,class:'body-weight'
          kg
      .new_middle
        %div
          朝食
          .new_mypage_morning
            .new_mypage_morning-text
              = f.text_area :morning_menu, placeholder: "食べたものを書こう", rows: "5",class:'morning-text'
            .new_mypage_morning-data
              %div
              タンパク質
              = f.number_field :morning_p, min: 0 , max:100
              g
              %div
              脂質　　　
              = f.number_field :morning_f, min: 0 , max:100
              g
              %div
              炭水化物　
              = f.number_field :morning_c, min: 0 , max:300
              g
              %div
              カロリー　
              = f.number_field :morning_cal, min: 0 , max:3000, step:10
              cal
        %div
          間食（午前）
          .new_mypage_morning
