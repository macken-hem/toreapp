.user-new
  .user-new-form
    .new-user-form-edit
      %h2#user_sinki 新規登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          メールアドレス
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email",id:'user_form'
        .field
          パスワード
          - if @minimum_password_length
            %em
              (#{@minimum_password_length}文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password",id:'user_form'
        .field
          パスワード（確認用）
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password",id:'user_form'
          %br/
        .field
          ニックネーム
          %br/
          = f.text_field :nickname,id:'user_form'
          -# = f.number_field :age
        .actions
          = f.submit "登録！！",class:'btn-gradient-3d-orange',id:'user_form2'
